# Application Configuration
APP_NAME=AI Backend System
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# PostgreSQL (RDS)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_backend
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_MIN_CONNECTIONS=5

# DynamoDB
DYNAMODB_ENDPOINT=http://localhost:8000
CONVERSATIONS_TABLE=Conversations
FEEDBACKS_TABLE=Feedbacks
EMBED_INDEX_TABLE=EmbedIndex
INGEST_JOBS_TABLE=IngestJobs

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS Bedrock
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_REGION=us-east-1
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# S3
S3_BUCKET_EMBEDDINGS=ai-backend-embeddings
S3_BUCKET_DOCUMENTS=ai-backend-documents

# OpenSearch
OPENSEARCH_ENDPOINT=https://your-opensearch-domain.us-east-1.es.amazonaws.com
OPENSEARCH_INDEX_NAME=documents

# WebSocket
WEBSOCKET_API_ENDPOINT=wss://your-api-id.execute-api.us-east-1.amazonaws.com/prod
CONNECTION_TTL_SECONDS=3600

# API Gateway
API_GATEWAY_ENDPOINT=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_WORKSPACE_ID=your-workspace-id

# GitLab Integration
GITLAB_API_TOKEN=your-gitlab-token
GITLAB_URL=https://gitlab.com

# Backlog Integration
BACKLOG_API_KEY=your-backlog-api-key
BACKLOG_SPACE_KEY=your-space
BACKLOG_DOMAIN=backlog.com

# Ingestion
INGESTION_SCHEDULE_RATE=rate(1 hour)
INGESTION_BATCH_SIZE=100

# Rate Limiting
RATE_LIMIT_PER_USER=100
RATE_LIMIT_WINDOW_SECONDS=60
