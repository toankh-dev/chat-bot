# ============================================================================
# Local Development Environment Configuration (LocalStack + Gemini)
# ============================================================================
# Copy this file to .env and fill in your values

# ----------------------------------------------------------------------------
# Environment Settings
# ----------------------------------------------------------------------------
ENVIRONMENT=local
PROJECT_NAME=kass-chatbot
AWS_REGION=us-east-1
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# AWS/LocalStack Configuration
# ----------------------------------------------------------------------------
# LocalStack endpoint for all AWS services
AWS_ENDPOINT_URL=http://localhost:4566

# If running in Docker, use: http://localstack:4566
# AWS_ENDPOINT_URL=http://localstack:4566

# ----------------------------------------------------------------------------
# DynamoDB Tables (LocalStack)
# ----------------------------------------------------------------------------
CONVERSATIONS_TABLE=kass-chatbot-local-conversations
AGENT_STATE_TABLE=kass-chatbot-local-agent-state
TOOL_LOGS_TABLE=kass-chatbot-local-tool-logs

# ----------------------------------------------------------------------------
# S3 Buckets (LocalStack)
# ----------------------------------------------------------------------------
DOCUMENTS_BUCKET=kass-chatbot-local-documents
EMBEDDINGS_BUCKET=kass-chatbot-local-embeddings
LOGS_BUCKET=kass-chatbot-local-logs
BACKUPS_BUCKET=kass-chatbot-local-backups

# ----------------------------------------------------------------------------
# OpenSearch Configuration (LocalStack or ChromaDB)
# ----------------------------------------------------------------------------
# Option 1: LocalStack OpenSearch (requires LocalStack Pro)
OPENSEARCH_ENDPOINT=http://localhost:9200
OPENSEARCH_INDEX=documents

# Option 2: ChromaDB (free alternative for local dev)
# VECTOR_STORE=chromadb
# CHROMADB_HOST=localhost
# CHROMADB_PORT=8001

# ----------------------------------------------------------------------------
# LLM Provider Configuration (Gemini for local dev)
# ----------------------------------------------------------------------------
LLM_PROVIDER=gemini

# Google Gemini API Key (get from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Models
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_EMBED_MODEL=models/text-embedding-004

# ----------------------------------------------------------------------------
# EventBridge (LocalStack)
# ----------------------------------------------------------------------------
EVENTBUS_NAME=kass-chatbot-local-events

# ----------------------------------------------------------------------------
# Optional: Database for Conversation History
# ----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chatbot
POSTGRES_USER=chatbot
POSTGRES_PASSWORD=chatbot123

# ----------------------------------------------------------------------------
# Optional: Redis for Caching
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ----------------------------------------------------------------------------
# Setup Instructions:
# ----------------------------------------------------------------------------
# 1. Copy this file to .env:
#    cp .env.local.example .env
#
# 2. Get a Gemini API key:
#    https://makersuite.google.com/app/apikey
#
# 3. Start LocalStack:
#    docker-compose up -d localstack
#
# 4. Initialize LocalStack resources:
#    python scripts/init_localstack.py
#
# 5. Start the application:
#    docker-compose up app
#
# Or run locally:
#    python -m app.main
# ----------------------------------------------------------------------------
